{
  "manifest_version": 3,
  "name": "Custom Sidebar",
  "version": "1.0",
  "description": "Custom Sidebar",
  "sidebar_action": {
    "default_panel": "newtab.html",
    "default_title": "Custom Sidebar"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Site Access"
  }, 
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs", "storage", "contextMenus", "menus"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "custom-sidebar@example.com",
      "strict_min_version": "109.0"
    }
  }
}